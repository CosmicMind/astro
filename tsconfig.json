{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "../*"
      ],
      "#/*": [
        "./*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "references": [
    { "path": "../foundation/dist" },
    { "path": "../composition/dist" }
  ],
  "include": [
    "**/*.ts",
    "**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types",
    "typings"
  ]
}