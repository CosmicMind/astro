{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declarationDir": "dist/types",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "../*"
      ],
      "#/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    { "path": "../foundation" },
    { "path": "../composition" }
  ],
  "files": [
    "../foundation/index.ts",
    "../composition/index.ts"
  ],
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "*.config.js"
  ],
  "typeRoots": [
    "node_modules/@types",
    "typings"
  ]
}
