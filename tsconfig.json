{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "..",
    "declarationDir": "dist/types",
    "outDir": "dist",
    "baseUrl": "."
  },
  "references": [
    { "path": "../foundation/tsconfig.json" },
    { "path": "../aurora/tsconfig.json" },
    { "path": "../composition/tsconfig.json" }
  ],
  "files": [
    "../foundation/dist/types/foundation/index.d.ts",
    "../aurora/dist/types/aurora/index.d.ts",
    "../composition/dist/types/composition/index.d.ts"
  ],
  "include": [
    "**/*.vue",
    "**/*.ts",
    "src/**/*.js",
    "config/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "typings",
    "node_modules/@types"
  ]
}