{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "..",
    "declarationDir": "dist/types",
    "outDir": "dist",
    "baseUrl": "."
  },
  "references": [
    { "path": "../foundation/tsconfig.json" },
    { "path": "../aurora/tsconfig.json" },
    { "path": "../composition/tsconfig.json" }
  ],
  "files": [
    "../foundation/index.ts",
    "../aurora/index.ts",
    "../composition/index.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.json",
    "**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "typings",
    "node_modules/@types"
  ]
}