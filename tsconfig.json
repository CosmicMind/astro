{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "$/*": [
        "../*/index.ts"
      ],
      "#/*": [
        "./*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "references": [
    { "path": "../foundation" },
    { "path": "../composition" }
  ],
  "files": [
    "../foundation/index.ts",
    "../composition/index.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types",
    "typings"
  ]
}